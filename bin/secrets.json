        },
        {
          "name": "oidc-client-jellyfin-secret-digest",
          "derive_from": "oidc-client-jellyfin-secret",
          "generate": "docker run --rm authelia/authelia:latest authelia crypto hash generate pbkdf2 --variant sha512 --password \"$VALUE\" 2>/dev/null | grep 'Digest:' | cut -d' ' -f2"
